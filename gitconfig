# Changelog
#
# 2014-10-16 - Added new alias
#   Aliases came from
#   http://blogs.atlassian.com/2014/10/advanced-git-aliases/

# Author Settings
[user]
    name = Sean Jones
    email = neuralsandwich@gmail.com

# Core Settings
[core]
    autocrlf = input
    editor = vim
    excludesfile = /Users/neuralsandwich/.gitignore
    pager = less
[push]
    default = current

# Make Git colourful
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
[color "status"]
    changed = yellow
    added = green
    untracked = red

# Make Git easier to use
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    type = cat-file -t
    dump = cat-file -p
    ls = log --oneline
    caa = commit -a --amend -C HEAD
    new = !sh -c 'git log $1@{1}..$1@{0} "$@"'
    bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
    hist = log --graph --date=short --pretty=format:'%C(blue)%h%C(reset) %C(green)%ad%C(reset) | %s %C(dim white)[%an]%C(reset)%C(yellow)%d%C(reset)'
[rerere]
	enable = true
