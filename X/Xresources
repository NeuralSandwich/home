! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #111213
URxvt*foreground: #EEE8D4

! black
URxvt.color0:   #111213
URxvt.color8:   #042732
! red
URxvt.color1:   #aa5c5a
URxvt.color9:   #dc7774
! green
URxvt.color2:   #9ca972
URxvt.color10:  #cadb93
! yellow
URxvt.color3:   #a99e7e
URxvt.color11:  #dbcca3
! blue
URxvt.color4:   #7092a9
URxvt.color12:  #91bddb
! magenta
URxvt.color5:   #D33682
URxvt.color13:  #6C71C4
! cyan
URxvt.color6:   #2AA198
URxvt.color14:  #93A1A1
! white
URxvt.color7:   #EEE8D5
URxvt.color15:  #FDF6E3

! Transparency
! Real - Compiz

URxvt.background: rgba:0000/0000/0200/c800

! Fake - X hack
URxvt.transparent: true
URxvt.shading:     20
URxvt.depth:       32


! Font settings
Xft*antialias:          1
Xft*hinting:            medium
Xft.hintstyle:          hintlight
Xft*.lcdfilter:         lcddefault

! Font
URxvt*font:             xft:Hack:pixelsize=12
URxvt*boldFont:         xft:Hack:bold:pixelsize=12

! URI selection
URxvt.perl-ext-common:          default,matcher,resize-font
URxvt.matcher.button:           1

URxvt.matcher.matcher.0:        \\b(http|https|ftp):\/\/[\\w\\-\\@;\\/?:&=%\\$.+!*\x27,~#]+
URxvt.matcher.launcher.0:       chromium-browser

! Scroll
! jump scrolling
URxvt*jumpScroll:           true
! skip scrolling
URxvt*skipScroll:           false
! scroll to bottom on output
URxvt*scrollTtyOutput:      true
! scroll to bottom when a non-special key is pressed
URxvt*scrollTtyKeypress:    false
! scroll to bottom when tty receives new lines
URxvt*scrollWithBuffer:     false
! scroll page by page
URxvt*mouseWheelScrollPage: false


! Scrollbar
! enable scrollbar
URxvt*scrollBar:          false
! scrollbar width
URxvt*thickness:          5
! scrollbar color
URxvt*scrollColor:        #1E1E1E
! scrollbar trough area color
!URxvt*troughColor:        #333333
! scrollbar without a trough
!URxvt*scrollBar_floating: false
! scrollbar to the right
URxvt*scrollBar_right:    true
! scrollbar style
URxvt*scrollstyle: plain

! Borders
! pixels for external border
URxvt*externalBorder:     0
! pixels for internal border
URxvt*internalBorder:     2
! remove border
URxvt*borderLess: false


Xcursor.size: 16
